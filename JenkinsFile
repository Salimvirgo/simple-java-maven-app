pipeline {
    // agent any
    agent {
        label 'builder'
    }
    options {
        skipStagesAfterUnstable()
    }
    
     tools {
        maven 'Maven'
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        
        stage('Testing Env') {
            steps {
                echo "Running ${JOB_NAME}------${BUILD_NUMBER} on ${http://3.250.175.55:8080/job/simplejavaapptraining/}"
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') { 
            steps {
                sh './jenkins/scripts/deliver.sh' 
            }
        }
    }
}
